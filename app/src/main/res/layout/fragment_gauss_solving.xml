        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:text="+"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"/>

        <com.google.android.material.textfield.TextInputLayout
